<div class="content-grid element-show-area">
  <div class="element-show-shell user-page-shell blue-shell-gradient mw800">
    <div class="user-show-name-header center-text">
      <h2><%= @user.fname %> <%= @user.lname %></h2>
    </div><!--end of user-show-name-div-->
    <div class="flex-space-between padding-5">
      <%= link_to consultations_path do %>
        <i class="fa fa-home fa-lg" aria-hidden="true"></i>
      <% end %>
      <h6><%= link_to "dashboard", dashboard_path %></h6>
    </div>
    <hr>
    <div class="user-profile-image-div">
      <% avatar_url = @user.photo.url || avatar_url = "https://res.cloudinary.com/mattg/image/upload/v1494130069/user-icon.png" %>
      <!-- ^ added `.url(:brightface)` from the `photo_uploader` class-->
      <div class="user-large-profile-image-img icon-shell" style="background-image: url('<%= image_path avatar_url %>'); background-size: cover;  height: 180px; width: 180px; border-radius: 50%; background-position: center;"></div>
    </div><!--end of icon-div-->
    <div class="user-show-details" style="max-width: 400px; margin: auto;">
      <div class="flex-space-between">
        <h5>City:</h5>
        <h5><%= @user.city %></h5>
      </div><!--end of city-div-->
      <div class="flex-space-between">
        <h5>University Major:</h5>
        <h5><%= @user.subjectmajor %></h5>
      </div><!--end of major-div-->
      <div class="flex-space-between">
        <h5>Education:</h5>
        <h5><%= @user.edulevel %></h5>
      </div><!--end of Edu-div-->
      <div class="flex-space-between">
        <h5>Gender:</h5>
        <h5><%= @user.gender %></h5>
      </div><!--end of gender-div-->
    </div><!--end of user-show-detials-->
    <div class="aboutme">
      <h5 class="center-text">About Me:</h5>
      <h5 class="padding-5"><%= @user.aboutme %></h5>
    </div>
    <div class="privatemessage-show-form-div flex-center-center">
      <a href="" data-toggle="modal" data-target="#create-pm">
        <div class="btn btn-primary round-div no-decor center-div">private message</div>
      </a>
    </div><!--end of privatemessage-show-form-div-->
  </div>
</div>
<!--begin modal of privatemessage create partial-->
  <div class="modal fade privatemessage-mod-style" id="create-pm">
    <div class="modal-dialog" role="document"><!--aligns the modal document-->
      <div class="modal-content">
        <div class="modal-header modal-head-grad flex flex-center-center blue-shell-gradient-header">
          <h3 class="create-privatemessage-modal-header">To: <%= @user.fname %> <%= @user.lname %> </h3>
        </div><!--end of header-->
        <div class="modal-body flex flex-center-center">
          <%= render "privatemessages/new_privatemessage_form", user: @user, privatemessage: @privatemessage %>
        </div><!--end of modal-body and privatemessage-show-form-div-->
      </div><!--end of modal-content-->
    </div><!--end of modal-dialog-->
  </div><!--end of modal-->
