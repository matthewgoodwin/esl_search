    <!-- Profile picture with dropdown list -->
    <div class="flex-space-between"> <!--nested flex-box-->
      <div class="flex-25">
        <% korea_url = "https://res.cloudinary.com/mattg/image/upload/c_scale,q_auto:eco,w_100/v1602068229/001-south-korea_square.png" %>
        <%= link_to root_path(locale: :ko) do %>
          <div class="" style="background-image: url('<%= image_path korea_url %>');background-size: cover; height: 30px; width: 30px; background-position: center;">
          </div>
        <% end %>
      </div> <!--end of korea-->
      <div class="flex-25">
        <% english_url = "https://res.cloudinary.com/mattg/image/upload/c_scale,q_auto:eco,w_100/v1602071464/002-united-states-of-america_square.png" %>
        <%= link_to root_path(locale: :en) do %>
          <div class="" style="background-image: url('<%= image_path english_url %>'); background-size: cover; height: 30px; width: 30px; background-position: center;">
          </div>
        <% end %>
      </div> <!--end of america -->
      <div class="navbar-esl-cursor flex-50">
        <div class="dropdown-toggle"  id="navbar-esl-menu" data-toggle="dropdown" >
          <% if user_signed_in? %>
          <% avatar_url = current_user.photo.url(:bright_face) || avatar_url = "https://res.cloudinary.com/mattg/image/upload/v1494130069/user-icon.png" %>
            <% if current_user.photo.present? %>
              <div class="user-md-profile-image-img icon-shell center-div center-text" style="background-image: url('<%= image_path avatar_url %>'); background-size: cover;  height: 50px; width: 50px; border-radius: 50%; background-position: center;"></div>
            <% else %> <!-- else current_user.photo.present?-->
              <div class="user-md-profile-image-img center-div center-text user-profile-initial" style="background-color: <%= current_user.color %>;background-size: cover;  height: 50px; width: 50px; border-radius: 50%; background-position: center;"><p class="white-text user-initial-size-40 center-text"><%= current_user.first_in(current_user)%></p></div>
            <% end %> <!-- end current_user.photo.present?-->
          <% else %> <!--else signed_in-->
              <% avatar_url = "https://res.cloudinary.com/mattg/image/upload/v1494130069/user-icon.png" %>
              <div class="user-sm-profile-image-img" style="background-image: url('<%= image_path avatar_url %>'); background-size: cover;  height: 50px; width: 50px; border-radius: 50%; background-position: center;"></div>
          <% end %> <!--end of signed_in?-->


          </div><!--end of icon-div-->
          <ul class="dropdown-menu dropdown-menu-right navbar-esl-dropdown-menu">
            <li><%= link_to t('global.menu.home'), root_path %></li>
