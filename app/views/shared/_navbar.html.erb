            <li><%= link_to t('global.menu.dir'), consultations_path %></li>
            <li><%= link_to "POST A JOB(K)", new_job_post_path %></li>
            <li><%= link_to t('global.menu.edit_pro'), edit_user_registration_path %></li>
            <!-- <div>Icons made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div> -->
            <% korea_url = "https://res.cloudinary.com/mattg/image/upload/c_scale,q_auto:eco,w_100/v1602068229/001-south-korea_square.png" %>
            <% english_url = "https://res.cloudinary.com/mattg/image/upload/c_scale,q_auto:eco,w_100/v1602071464/002-united-states-of-america_square.png" %>

            <li><%= link_to "한국어", root_path(locale: :ko)%></li>
            <li><%= link_to "English", root_path(locale: :en)%></li>
            <% if user_signed_in? %>
              <li> <%= link_to t('global.menu.sign_out'), destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to t('global.menu.sign_in'), new_user_session_path %></li>
            <% end %>
            <!-- <li><a href="#">Profile</a></li> -->
            <!-- <li><a href="#">Log Out</a></li> -->
          </ul>
        </div><!--end of navbar-cursor flex-50-->
      </div><!--end of nested flexbox-space-between 25 25 50-->
    </div><!-- end of navbar-esl-right hidden-xs hidden-sm-->

  <!-- Dropdown appearing on mobile only -->
    <div class="navbar-esl-cursor hidden-md hidden-lg">
        <i class="fas fa-bars fa-lg dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-esl-dropdown-menu">
            <li><%= link_to t('global.menu.home'), root_path %></li>
            <li><%= link_to t('global.menu.dash'), dashboard_path %></li>
            <li><%= link_to t('global.menu.dir'), consultations_path %></li>
            <li><%= link_to t('global.menu.edit_pro'), edit_user_registration_path %></li>
            <li><%= link_to "한국어", root_path(locale: :ko) %></li>
            <li><%= link_to "English", root_path(locale: :en) %></li>
            <% if user_signed_in? %>
              <li> <%= link_to t('global.menu.sign_out'), destroy_user_session_path, method: :delete %></li>
              <% else %>
              <li><%= link_to t('global.menu.sign_in'), new_user_session_path %></li>
            <% end %>
          <!-- <li><a href="#">home</a></li> -->
        </ul>
    </div> <!-- end of navbar-esl-cursor hidden-md hidden-lg-->
